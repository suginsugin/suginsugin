#include<stdio.h>
int factorial(int n);
int main()
{
  int num;
  printf("suginbalaji G\n192321111\n");
  printf("enter the integer: ");
  scanf("%d",&num);
  printf("the factorail of %d is:%d", num, factorial(num));
return 0;
